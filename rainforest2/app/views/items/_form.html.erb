<%= form_for(@item) do |f| %>
  <!-- added between the made form but ended before the next form section is activated -->
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2> <%= pluralize(@item.errors.count, "error") %> Prohibited this item from being saved: </h2>

      <ul>
        <% @item.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :price_in_cents %>
    <%= f.text_field :price_in_cents %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
