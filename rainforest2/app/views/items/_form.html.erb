<%= form_for(@item) do |f| %>

  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :price_in_cents %>
    <%= f.text_field :price_in_cents %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
