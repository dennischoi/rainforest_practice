<h1>Sign Up</h1>
<%= link_to 'Back', items_path %>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is Invalid!</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li> <%= message %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p>
      <%= f.label :email %><br/>
      <%= f.text_field :email %>
    </p>
  </div>

  <div class="field">
    <p>
      <%= f.label :password %><br/>
      <%= f.password_field :password %>
    </p>
  </div>

  <div class="field">
    <p>
      <%= f.label :password_confirmation %><br/>
      <%= f.password_field :password_confirmation %>
    </p>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
